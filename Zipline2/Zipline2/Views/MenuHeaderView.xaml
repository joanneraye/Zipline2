<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:iconize="clr-namespace:FormsPlugin.Iconize;assembly=FormsPlugin.Iconize"
             x:Class="Zipline2.Views.MenuHeaderView">
  <ContentView.Content>
        <StackLayout Orientation="Vertical"
                     Padding="0"
                     Spacing="0">
            <BoxView HeightRequest="1" 
                     WidthRequest="50"
                     Color="White"/>
            <Grid HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <iconize:IconButton Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Command="{Binding MinusCommand}"
                                    IsVisible="{Binding ShowPlusMinus}"
                                            BackgroundColor="Black"
                                            TextColor="White"
                                            Text="fa-minus-circle"
                                            Margin="0"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding ItemCount}" HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="{Binding ShowPlusMinus}"
                                       BackgroundColor="Black"
                                       Margin="0"
                                       TextColor="White"/>
                <iconize:IconButton Grid.Row="0" Grid.Column="2" HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                     Command="{Binding PlusCommand}"
                                    IsVisible="{Binding ShowPlusMinus}"
                                                    BackgroundColor="Black"
                                                    TextColor="White"
                                                    Text="fa-plus-circle"
                                                    Margin="0"/>
                <Label Grid.Row="0" Grid.Column="5" 
                    TextColor="LightBlue"
                       x:Name="ItemTotalLabel"
                       FontSize="Small"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       Text="{Binding ItemTotal, StringFormat='{0:C} / ', Mode=TwoWay}" />
                <Label Grid.Row="0" Grid.Column="6" 
                    Text="{Binding OrderTotal, StringFormat='{0:C}', Mode=TwoWay}"
                       FontSize="Small"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       x:Name="OrderTotalLabel"
                       TextColor="LightBlue" />
            </Grid>
              
            <BoxView HeightRequest="1" 
                     WidthRequest="50"
                     Color="White"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>