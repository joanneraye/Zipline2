             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Zipline2.Pages;assembly=Zipline2.Pages"
             x:Class="Zipline2.Pages.TablesPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </ContentPage.Resources>   
    <ContentPage.Content>
      
        <StackLayout BackgroundColor="Black" 
                     Padding="10, 10"
                     Orientation="Vertical"
                     VerticalOptions="FillAndExpand">
            <!--<Button Text="Takeout" 
                        x:Name="TakeoutButton"
                        TextColor="Black"
                        BackgroundColor="Pink"
                        FontSize="10"
                        BorderColor="White"
                    HeightRequest="40"
                    WidthRequest="200"
                        BorderRadius="1"
                        BorderWidth="1"
                    Margin="10,0,10,10"
                        HorizontalOptions="Center"
                        Clicked="TakeoutButtonClicked"/>-->
            <ListView ItemsSource="{Binding DisplayTables}"
                      x:Name="TableList"
                      BackgroundColor="Black"
                      RowHeight="45"
                      SeparatorVisibility="Default">
                <!--In order to make space between ListView rows,
                     should take whatever the Grid's RowDefinition Height ends up
                     being and add 5 and then set ListView RowHeight to it.  I
                     have not yet figured out how to do that since I cannot
                     get at the Grid (doesn't recognize TablesGrid, I assume
                     because it is in the DataTemplate).  -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell x:Name="ListViewCellTables">
                            <Grid x:Name="TablesGrid"
                                  Padding="0,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" 
                                       BackgroundColor="Blue" 
                                       Text=" "
                                       Margin="5, 10, 5, 10">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                  Binding="{Binding InsideTable.IsOccupied, Mode=TwoWay}"
                                                            Value="True">
                                            <Setter Property="BackgroundColor" Value="Orange" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Button Grid.Column="1"
                                        Text="{Binding InsideTableName}" 
                                        TextColor="White" 
                                        BackgroundColor="Black"
                                        BorderColor="White"
                                        FontSize="8" 
                                        FontAttributes="Bold"
                                        BorderRadius="1"
                                        BorderWidth="1"
                                        Command="{Binding InsideTableCommand}">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                        Binding="{Binding InsideTable.HasUnsentOrder, Mode=TwoWay}"
                                                            Value="True">
                                            <Setter Property="TextColor" Value="Red" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Label Grid.Column="2" 
                                       BackgroundColor="Blue"
                                       Text=" "
                                       Margin="5, 10, 5, 10">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                  Binding="{Binding OutsideTable.IsOccupied, Mode=TwoWay}"
                                                            Value="True">
                                            <Setter Property="BackgroundColor" Value="Orange" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Button Grid.Column="3" Text="{Binding OutsideTableName}" 
                                        TextColor="White"
                                        FontSize="8"
                                        BackgroundColor="Black" 
                                         FontAttributes="Bold"
                                        BorderColor="White"
                                        BorderRadius="1"
                                        BorderWidth="1"
                                        Command="{Binding OutsideTableCommand}">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                        Binding="{Binding OutsideTable.HasUnsentOrder, Mode=TwoWay}"
                                                            Value="True">
                                            <Setter Property="TextColor" Value="Red" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

