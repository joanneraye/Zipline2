<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Zipline2;assembly=Zipline2"
             x:Class="Zipline2.TableListPage"
             Title="Tables">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TableButtons" TargetType="Button">
                <Setter Property="Margin" Value="5, 5, 5, 5" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BorderColor" Value="White" />
                <Setter Property="BorderRadius" Value="2" />
                <Setter Property="BorderWidth" Value="2" />
                <Setter Property="WidthRequest" Value="100" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="BackgroundColor" Value="Orange" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>   
    <ContentPage.Content>
      
        <StackLayout BackgroundColor="Black" 
                     Padding="10"
                     Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="(employee name)" 
                   TextColor="White" 
                   FontSize="Micro"
                   Margin="5, 3, 3, 3"/>
                <Label Text="(tables seated)" 
                       TextColor="White" 
                       FontSize="Micro"
                       Margin="3, 3, 0, 3"/>
              
                <Label Text="(refresh icon)" 
                       TextColor="White" 
                       FontSize="Micro"
                       Margin="3, 3, 3, 3"/>
            </StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                    <RowDefinition Height="55" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="TAKE OUT"
                       Grid.Row="0"
                       Grid.Column="0"
                       HorizontalOptions="Center"
                       Margin="5, 5, 5, 5"
                       TextColor="White"
                       BackgroundColor="Black"
                       BorderColor="White"
                       BorderRadius="3"
                       BorderWidth="2"
                       HeightRequest="40">
                </Button>
                <Button Text="OUTSIDE" 
                           Grid.Row="0"
                           Grid.Column="1"
                           x:Name="ButtonInsideOutside"
                           HorizontalOptions="Center"
                           Margin="5, 5, 5, 5"
                           TextColor="White"
                           BackgroundColor="Black"
                           BorderColor="White"
                           BorderRadius="3"
                           BorderWidth="2"
                           HeightRequest="40"
                           Clicked="InsideOutsideButtonClicked">
                </Button>
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Text="1"
                        x:Name="Row0Column0" 
                        Clicked="OnTableButtonClicked"
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="2"
                        Grid.Column="0"
                        x:Name="Row1Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="2" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="3"
                        Grid.Column="0"
                        x:Name="Row2Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="3" 
                        Style="{StaticResource TableButtons}" />              
                <Button Grid.Row="4"
                        Grid.Column="0"
                        x:Name="Row3Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="4a" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="5"
                        Grid.Column="0"
                        x:Name="Row4Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="4b" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="6"
                        Grid.Column="0"
                        x:Name="Row5Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="5" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="7"
                        Grid.Column="0"
                        x:Name="Row6Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="7a" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="8"
                        Grid.Column="0"
                        x:Name="Row7Column0" 
                        Clicked="OnTableButtonClicked"
                        Text="7b" 
                        Style="{StaticResource TableButtons}" />
               
                <Button Grid.Row="1"
                        Grid.Column="1"
                        x:Name="Row0Column1"
                        Clicked="OnTableButtonClicked"
                        Text="8a" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="2"
                        Grid.Column="1"
                        x:Name="Row1Column1" 
                        Clicked="OnTableButtonClicked"
                        Text="8b" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="3"
                        Grid.Column="1"
                        x:Name="Row2Column1" 
                        Clicked="OnTableButtonClicked"
                        Text="10" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="4"
                        Grid.Column="1"
                        x:Name="Row3Column1" 
                        Clicked="OnTableButtonClicked"
                        Text="11" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="5"
                        Grid.Column="1"
                        x:Name="Row4Column1"
                        Clicked="OnTableButtonClicked"
                        Text="12" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="6"
                        Grid.Column="1"
                        x:Name="Row5Column1"
                        Clicked="OnTableButtonClicked"
                        Text="Cash" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="7"
                        Grid.Column="1"
                        x:Name="Row6Column1" 
                        Clicked="OnTableButtonClicked"
                        Text="Paris" 
                        Style="{StaticResource TableButtons}" />
                <Button Grid.Row="8"
                        Grid.Column="1"
                        x:Name="Row7Column1" 
                        Clicked="OnTableButtonClicked"
                        Text="Waldo" 
                        Style="{StaticResource TableButtons}" />
                <Button Text="Move Table"
                       Grid.Row="9"
                       Grid.Column="0"
                       HorizontalOptions="Center"
                       Margin="5, 5, 5, 5"
                       TextColor="White"
                       BackgroundColor="Black"
                       BorderColor="White"
                       BorderRadius="3"
                       BorderWidth="2"
                       HeightRequest="40"
                       Clicked="OnMoveTableButtonClicked">
                </Button>
                <Button Text="Print Check" 
                           Grid.Row="9"
                           Grid.Column="1"
                           HorizontalOptions="Center"
                           Margin="5, 5, 5, 5"
                           TextColor="White"
                           BackgroundColor="Black"
                           BorderColor="White"
                           BorderRadius="3"
                           BorderWidth="2"
                           HeightRequest="40"
                           Clicked="OnPrintCheckButtonClicked">
                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</local:BasePage>








